---
import Layout from "../layouts/Layout.astro";
---

<script defer>
  const returnUrl = () => {
    return {
      url: "https://api.github.com/users/JesusEspanaSandoval/repos",
      characters: [],
    };
  };
</script>
<link rel="stylesheet" href="/css/home.css" />
<Layout title="Home">
  <section
    class="flex flex-col items-center justify-center w-screen h-screen text-white"
    id="mainSect"
  >
    <div class="mb-4 overflow-hidden rounded-full w-60 h-60" id="meContainer">
      <img class="h-full" src="/img/me.jpg" />
    </div>
    <h1 class="text-5xl font-bold text-center">Hi, I'm a backend developer</h1>
    <a href="#skillsSect" class="mt-8">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-6 h-6"
        style="transform: scale(200%, 200%);"
      >
        <path
          fill-rule="evenodd"
          d="M20.03 4.72a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06 0l-7.5-7.5a.75.75 0 011.06-1.06L12 11.69l6.97-6.97a.75.75 0 011.06 0zm0 6a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06 0l-7.5-7.5a.75.75 0 111.06-1.06L12 17.69l6.97-6.97a.75.75 0 011.06 0z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </section>
  <section
    id="skillsSect"
    class="flex flex-col items-center justify-around min-h-screen text-white bg-gray"
  >
    <h1 class="mt-4 mb-8 text-5xl font-bold">I can use</h1>
    <div id="skillsContainer" class="flex flex-wrap justify-center">
      <img class="m-2 h-44" src="/img/html5.svg" />
      <img class="m-2 h-44" src="/img/css3.svg" />
      <img class="m-2 h-44" src="/img/javascript.svg" />
      <img class="m-2 h-44" src="/img/tailwindcss.svg" />
      <img class="m-2 h-44" src="/img/php.svg" />
      <img class="m-2 h-44" src="/img/laravel.svg" />
    </div>
    <a href="#projectsSect" class="mt-8 mb-4">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-6 h-6"
        style="transform: scale(200%, 200%);"
      >
        <path
          fill-rule="evenodd"
          d="M20.03 4.72a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06 0l-7.5-7.5a.75.75 0 011.06-1.06L12 11.69l6.97-6.97a.75.75 0 011.06 0zm0 6a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06 0l-7.5-7.5a.75.75 0 111.06-1.06L12 17.69l6.97-6.97a.75.75 0 011.06 0z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </section>
  <section
    x-data="returnUrl()"
    x-init="fetch(url).then(response => response.json()).then(response => { characters = response })"
    id="projectsSect"
    class="flex flex-col min-h-screen text-white"
  >
    <div class="flex items-center ml-8">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 496 512"
        class="max-md:hidden w-14 invert"
      >
        <path
          d="M165.9 397.4c0 2-2.3 3.6-5.2 3.6-3.3.3-5.6-1.3-5.6-3.6 0-2 2.3-3.6 5.2-3.6 3-.3 5.6 1.3 5.6 3.6zm-31.1-4.5c-.7 2 1.3 4.3 4.3 4.9 2.6 1 5.6 0 6.2-2s-1.3-4.3-4.3-5.2c-2.6-.7-5.5.3-6.2 2.3zm44.2-1.7c-2.9.7-4.9 2.6-4.6 4.9.3 2 2.9 3.3 5.9 2.6 2.9-.7 4.9-2.6 4.6-4.6-.3-1.9-3-3.2-5.9-2.9zM244.8 8C106.1 8 0 113.3 0 252c0 110.9 69.8 205.8 169.5 239.2 12.8 2.3 17.3-5.6 17.3-12.1 0-6.2-.3-40.4-.3-61.4 0 0-70 15-84.7-29.8 0 0-11.4-29.1-27.8-36.6 0 0-22.9-15.7 1.6-15.4 0 0 24.9 2 38.6 25.8 21.9 38.6 58.6 27.5 72.9 20.9 2.3-16 8.8-27.1 16-33.7-55.9-6.2-112.3-14.3-112.3-110.5 0-27.5 7.6-41.3 23.6-58.9-2.6-6.5-11.1-33.3 2.6-67.9 20.9-6.5 69 27 69 27 20-5.6 41.5-8.5 62.8-8.5s42.8 2.9 62.8 8.5c0 0 48.1-33.6 69-27 13.7 34.7 5.2 61.4 2.6 67.9 16 17.7 25.8 31.5 25.8 58.9 0 96.5-58.9 104.2-114.8 110.5 9.2 7.9 17 22.9 17 46.4 0 33.7-.3 75.4-.3 83.6 0 6.5 4.6 14.4 17.3 12.1C428.2 457.8 496 362.9 496 252 496 113.3 383.5 8 244.8 8zM97.2 352.9c-1.3 1-1 3.3.7 5.2 1.6 1.6 3.9 2.3 5.2 1 1.3-1 1-3.3-.7-5.2-1.6-1.6-3.9-2.3-5.2-1zm-10.8-8.1c-.7 1.3.3 2.9 2.3 3.9 1.6 1 3.6.7 4.3-.7.7-1.3-.3-2.9-2.3-3.9-2-.6-3.6-.3-4.3.7zm32.4 35.6c-1.6 1.3-1 4.3 1.3 6.2 2.3 2.3 5.2 2.6 6.5 1 1.3-1.3.7-4.3-1.3-6.2-2.2-2.3-5.2-2.6-6.5-1zm-11.4-14.7c-1.6 1-1.6 3.6 0 5.9 1.6 2.3 4.3 3.3 5.6 2.3 1.6-1.3 1.6-3.9 0-6.2-1.4-2.3-4-3.3-5.6-2z"
        ></path></svg
      >
      <a
        href="https://github.com/JesusEspanaSandoval/"
        target="_blank"
        class="mt-8 mb-8 ml-4 text-5xl font-bold text-white max-md:ml-0"
      >
        My projects in Github
      </a>
    </div>

    <template x-for="project in characters">
      <div
        class="mb-4 ml-8 font-semibold text-white"
        x-show="project.name != 'JesusEspanaSandoval'"
      >
        <a
          class="text-2xl font-bold text-blue-500"
          target="_blank"
          x-bind:href="project.html_url"
          x-text="project.name"></a>
        <div class="flex">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="w-6 h-6"
          >
            <path d="M12 15a3 3 0 100-6 3 3 0 000 6z"></path>
            <path
              fill-rule="evenodd"
              d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 010-1.113zM17.25 12a5.25 5.25 0 11-10.5 0 5.25 5.25 0 0110.5 0z"
              clip-rule="evenodd"></path>
          </svg>
          <p class="ml-2" x-text="project.watchers_count"></p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6 ml-4 invert"
            viewBox="0 0 512 512"
            ><path
              d="M448 96a64 64 0 10-96.31 55.21c-1.79 20.87-11.47 38.1-28.87 51.29C305.07 216 280.09 224 256 224s-49.07-8-66.82-21.5c-17.4-13.19-27.08-30.42-28.87-51.29a64 64 0 10-64.11.29c2.08 40.87 21.17 76.87 54.31 102C171.3 269.26 197 280.19 224 285.09v75.52a64 64 0 1064 0v-75.52c27-4.9 52.7-15.83 73.49-31.59 33.14-25.13 52.23-61.13 54.31-102A64 64 0 00448 96zM128 64a32 32 0 11-32 32 32 32 0 0132-32zm128 384a32 32 0 1132-32 32 32 0 01-32 32zm128-320a32 32 0 1132-32 32 32 0 01-32 32z"
            ></path></svg
          >
          <p class="ml-1" x-text="project.forks"></p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="w-6 h-6 ml-4"
          >
            <path
              fill-rule="evenodd"
              d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z"
              clip-rule="evenodd"></path>
          </svg>
          <p class="ml-1" x-text="project.stargazers_count"></p>
        </div>
        <div class="flex items-center">
          <span class="inline mr-2">Language:</span>
          <p class="inline text-2xl text-blue-300" x-text="project.language">
          </p>
        </div>
        <p x-text="project.description"></p>
        <p x-show="project.description == null">
          This project don't have description
        </p>
      </div>
    </template>
    <a href="#contactSect" class="self-center mt-8 mb-4">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-6 h-6"
        style="transform: scale(200%, 200%);"
      >
        <path
          fill-rule="evenodd"
          d="M20.03 4.72a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06 0l-7.5-7.5a.75.75 0 011.06-1.06L12 11.69l6.97-6.97a.75.75 0 011.06 0zm0 6a.75.75 0 010 1.06l-7.5 7.5a.75.75 0 01-1.06 0l-7.5-7.5a.75.75 0 111.06-1.06L12 17.69l6.97-6.97a.75.75 0 011.06 0z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </section>
</Layout>
